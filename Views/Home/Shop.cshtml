                                        <a class="dropdown-item" href="#">10</a>
                                        <a class="dropdown-item" href="#">20</a>
                                        <a class="dropdown-item" href="#">30</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                @foreach(Products product in Model)
                {
                    <div  class="col-md-4 col-sm-4 col-sm-4 pb-1">
                        <div class="product-item bg-light mb-4">
                         
                                <div class="product-img position-relative overflow-hidden">
                                    <img class="img-fluid w-100" style="width:100%!important;height:300px!important;" src="/Prodimage/@product.Imageroad" alt="Resim yüklenemedi">
                                @if (Accessor.HttpContext.Session.GetString("UserAuth") != null)
                                {
                                    <div class="product-action">
                                        <a href="/Home/Shopsearch?Buy=@product.ItemName" class="btn btn-outline-dark btn-square"><i class="fa fa-shopping-cart"></i></a>
                                    </div>
                                }
                                </div>
                            
                            <div class="text-center py-4">
                                <h2><a class="h6 text-decoration-none text-truncate" href="#">@product.ItemName</a></h2>
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <h6>Ücret:<h6>@product.Price$</h6></h6>
                                    <br/>
                                </div>
                                <div class="d-flex align-items-left justify-content-left mb-1">
                                    <h6>Stok:<h6>@product.Stok</h6></h6>
                                </div>
                                <div class="d-flex align-items-left justify-content-left mb-1">
                                    <h6>Kategori:<h6>@product.category</h6></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
                    </div>
                    
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
